---
import Layout from "../../layouts/layout.astro";
import { dentalContent } from "../../content/dental.ts";

import HeroSection from "../../components/HeroSection.astro";
import Hero1 from "../../assets/dental/dentistHero3.jpg";
import Hero2 from "../../assets/dental/dentisHero.jpg";

import ServicesSection from "../../components/ServicesSection.astro";
import DienteLogo from "../../assets/dental/Diente.svg";

import AboutUsSection from "../../components/AboutUsSection.astro";
import AboutUsImage from "../../assets/dental/AboutUsDentist.jpg";

import TestimonialsSection from "../../components/TestimonialsSection.astro";

import ContactSection from "../../components/ContactSection.astro";

import Footer from "../../components/Footer.astro";
---

<Layout>
  <HeroSection {...dentalContent.hero} hero1={Hero1} hero2={Hero2} />
  <ServicesSection services={dentalContent.services} ServiceLogo={DienteLogo} />
  <AboutUsSection
    {...dentalContent.aboutUs}
    AboutUsImg={AboutUsImage}
    Doctors={dentalContent.aboutUs.doctors}
  />
  <TestimonialsSection testimonials={dentalContent.testimonials} />
  <ContactSection {...dentalContent.contact} />
  <Footer />
</Layout>
