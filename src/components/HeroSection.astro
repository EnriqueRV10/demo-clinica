---
import { Image } from "astro:assets";

const { name, title, description, hero1, hero2 } = Astro.props;
---

<section
  id="Hero"
  class="relative min-h-screen bg-gradient-to-br from-slate-300 to-blue-50 overflow-hidden"
>
  <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-cyan-500/5">
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8 pt-20 pb-16">
    <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[80vh]">
      <div class="space-y-8 lg:pr-8">
        <div class="space-y-6">
          <h1
            class="text-5xl lg:text-6xl xl:text-7xl font-bold text-slate-900 leading-tight"
          >
            Bienvenido a
            <span class="text-blue-600 relative">
              {name}
              <span class="inline-block ml-2 text-blue-400">âœ¨</span>
            </span>
            <br />
            <span class="text-slate-800">{title}</span>
          </h1>

          <p class="text-lg lg:text-xl text-slate-600 max-w-lg leading-relaxed">
            {description}
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <button
            class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Ver Servicios
          </button>
          <button
            class="border-2 border-cyan-400 text-cyan-600 hover:bg-cyan-50 px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300"
          >
            Contactar
          </button>
        </div>
      </div>

      <div class="relative">
        <div class="relative mb-6 lg:mb-8">
          <div
            class="relative overflow-hidden rounded-3xl shadow-2xl transform rotate-2 hover:rotate-1 transition-transform duration-500"
          >
            <Image
              src={hero1}
              alt="Dental examination in progress"
              class="w-full h-80 lg:h-96 object-cover"
              loading={"eager"}
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"
            >
            </div>
          </div>
        </div>

        <div
          class="absolute bottom-0 left-0 w-64 lg:w-80 transform -rotate-3 hover:-rotate-2 transition-transform duration-500"
        >
          <div class="relative overflow-hidden rounded-3xl shadow-xl">
            <Image
              src={hero2}
              alt="Patient dental care"
              class="w-full h-48 lg:h-60 object-cover"
              loading={"eager"}
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"
            >
            </div>
          </div>
        </div>

        <div
          class="absolute top-10 right-10 w-4 h-4 bg-cyan-400 rounded-full animate-bounce delay-100"
        >
        </div>
        <div
          class="absolute top-32 left-8 w-3 h-3 bg-blue-500 rounded-full animate-bounce delay-300"
        >
        </div>
        <div
          class="absolute bottom-32 right-16 w-2 h-2 bg-purple-400 rounded-full animate-bounce delay-500"
        >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
