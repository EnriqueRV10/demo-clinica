---
const { name, LogoHeader } = Astro.props;
---

<!-- Agrega x-data en un wrapper para usar Alpine.js -->
<header
  class="bg-white min-h-[100px] fixed top-0 left-0 w-full shadow z-50"
  x-data="{ open: false }"
>
  <div
    class="container mx-auto flex items-center justify-between h-[100px] px-4"
  >
    <div class="flex items-center gap-2">
      <LogoHeader class="w-10 h-10" />
      <span class="font-bold text-3xl">{name}</span>
    </div>

    <!-- Botón hamburguesa -->
    <button
      @click="open = !open"
      class="md:hidden text-gray-700 focus:outline-none"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Menú en pantallas grandes -->
    <nav class="hidden md:block">
      <ul class="flex space-x-6">
        <li>
          <a href="#Hero" class="text-gray-700 hover:text-blue-500">Inicio</a>
        </li>
        <li>
          <a href="#servicios" class="text-gray-700 hover:text-blue-500"
            >Servicios</a
          >
        </li>
        <li>
          <a href="#nosotros" class="text-gray-700 hover:text-blue-500"
            >Nosotros</a
          >
        </li>
        <li>
          <a href="#testimonios" class="text-gray-700 hover:text-blue-500"
            >Testimonios</a
          >
        </li>
        <li>
          <a href="#contacto" class="text-gray-700 hover:text-blue-500"
            >Contacto</a
          >
        </li>
      </ul>
    </nav>
  </div>

  <!-- Menú colapsable en móviles -->
  <div x-show="open" class="md:hidden px-4 pb-4" x-transition>
    <ul class="flex flex-col space-y-2">
      <li>
        <a
          href="#Hero"
          class="text-gray-700 hover:text-blue-500"
          @click="open = false">Inicio</a
        >
      </li>
      <li>
        <a
          href="#servicios"
          class="text-gray-700 hover:text-blue-500"
          @click="open = false">Servicios</a
        >
      </li>
      <li>
        <a
          href="#nosotros"
          class="text-gray-700 hover:text-blue-500"
          @click="open = false">Nosotros</a
        >
      </li>
      <li>
        <a
          href="#testimonios"
          class="text-gray-700 hover:text-blue-500"
          @click="open = false">Testimonios</a
        >
      </li>
      <li>
        <a
          href="#contacto"
          class="text-gray-700 hover:text-blue-500"
          @click="open = false">Contacto</a
        >
      </li>
    </ul>
  </div>
</header>
